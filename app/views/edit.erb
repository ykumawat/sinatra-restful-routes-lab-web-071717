<form method="POST" action="/recipes/<%=@recipe.id%>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <input id="recipe_name" type="text" value="<%=@recipe.name%>" name="name">
  <input id="ingredients_names" type="text" value="<%=@recipe.ingredients%>" name="ingredients">
  <input id="cook_time" type="text" value="<%=@recipe.cook_time%>" name="cook_time">
  <input type="submit" value="submit" id="submit">
</form>
